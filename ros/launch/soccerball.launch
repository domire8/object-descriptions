<?xml version="1.0"?>
<launch>

  <arg name="urdf_path" default="$(find object_descriptions)/objects/soccerball.urdf.xacro"/>

  <param name="robot_description"
         command="$(find xacro)/xacro $(arg urdf_path) prefix:='soccer_' connected_to:='' xyz:='0 0 1' rpy:='0 1.57 0'
         radius:=0.2"/>
  <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" output="screen"/>

  <node type="rviz" name="rviz" pkg="rviz" args="-d $(find object_descriptions)/rviz/object.rviz"/>

</launch>